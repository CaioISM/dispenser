<div class="row">
  <div class="col-md-8 mb-4">
    <div class="card mb-4">
      <div class="card-header py-3">
        <h5 class="mb-0">Cadastrar um novo dispenser</h5>
      </div>
      <div class="card-body">
        <form>
          <!-- 2 column grid layout with text inputs for the first and last names -->
          <!-- Text input -->
          <div class="form-outline mb-4">
            <%= form.label :Proprietário_do_Dispenser, class: "form-label" %>
            <%= form.text_field :owner, id: 'form7Example3', class: 'form-control' %>
          </div>

          <!-- Text input -->
          <div class="form-outline mb-4">
            <%= form.label :Nome_do_Dispenser, class: "form-label" %>
            <%= form.text_field :nameDevice, id: 'form7Example3', class: 'form-control' %>
          </div>

          <!-- Text input -->
          <div class="form-outline mb-4">
            <%= form.label :Endereço_de_IP, class: "form-label" %>
            <%= form.text_field :ipAddress, id: 'form7Example3', class: 'form-control' %>
          </div>

          <div class="row mb-4">
            <div class="col">
              <div class="form-outline">
                <%= form.label :Litragem_do_Galão, class: "form-label" %>
                <%= form.text_field :fullmax, id: 'phoneNumberInput', class: 'form-control', oninput: "handleInputChange()" %>
              </div>
            </div>

            <div class="col">
              <div class="form-outline">
                <%= form.label :Tamanho_da_dose, class: "form-label" %>
                <%= form.text_field :setdose, id: 'form7Example1', class: 'form-control' %>
              </div>
            </div>

            <div class="col">
              <div class="form-outline">
                <%= form.label :Valor_do_Drink, class: "form-label" %>
                <%= form.text_field :valuedrink, id: 'form7Example1', class: 'form-control' %>
              </div>
            </div>
          </div>

          <div class="d-flex">
            <div class="form-group mr-2">
              <%= form.submit 'Cadastrar Dispenser', class: 'btn btn-primary' %>
            </div>

            <div class="form-group">
              <%= link_to "Voltar", dispensers_path, class: 'btn btn-success' %>
            </div> 
          </div>

        <% end %>
        </form>
      </div>
    </div>
  </div>