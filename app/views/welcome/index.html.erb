<div class="wrapper d-flex align-items-stretch">
  <div id="content" class="p-4 p-md-5">
    <div id="page-wrapper">
      <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
          <div class="col-lg-12">
            <ol class="breadcrumb">
              <li class="active">
                <h1><i class="fas fa-bars"></i> Dashboard</h1>
              </li>
            </ol>
          </div>
        </div>

        <div class="row justify-content-center align-items-center">
          <!-- Painel 1 - Meus Dispensers -->
          <div class="col-lg-3 col-md-6">
            <div class="panel panel-primary">
              <div class="panel-heading">
                <div class="row">
                  <div class="col-xs-3">
                    <i class="fa fa-glass-whiskey fa-5x"></i>
                  </div>
                  <div class="col-xs-9 text-right">
                    <% if current_user.admin? %>
                      <div class="huge"><%= @admin_lockers_count %></div>
                    <% else %>
                      <div class="huge"><%= @user_keylockers_count %></div>
                    <% end %>
                    <div>Meus Dispensers</div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Painel 2 - Meus Ganhos -->
          <% @lockers_associados.each do |keylocker| %>
            <div class="col-lg-3 col-md-6">
              <div class="panel panel-green">
                <div class="panel-heading">
                  <div class="row">
                    <div class="col-xs-3">
                      <i class="fa fa-money fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                      <% if current_user.admin? %>
                        <div class="huge"><%= @admin_lockers_count %></div>
                      <% else %>
                        <div class="huge">R$ <%= number_with_precision(keylocker.total, precision: 2) %></div>
                      <% end %>
                      <div>Meus ganhos</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Painel 3 - Meus Usu치rios (Somente para administradores) -->
          <% if current_user.admin? %>
            <div class="col-lg-3 col-md-6">
              <div class="panel panel-green">
                <div class="panel-heading">
                  <div class="row">
                    <div class="col-xs-3">
                      <i class="fa fa-user fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                      <% if current_user.admin? %>
                        <div class="huge"><%= @admin_users_count %></div>
                      <% else %>
                        <div class="huge"><%= @user_keylockers_count %></div>
                      <% end %>
                      <div>Meus Usu치rios</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Painel 4 - Meus Funcion치rios -->
          <div class="col-lg-3 col-md-6">
            <div class="panel panel-yellow">
              <div class="panel-heading">
                <div class="row">
                  <div class="col-xs-3">
                    <i class="fa fa-user-tie fa-5x"></i>
                  </div>
                  <div class="col-xs-9 text-right">
                    <% if current_user.admin? %>
                      <div class="huge"><%= @admin_employees_count %></div>
                    <% else %>
                      <div class="huge"><%= @user_employees_count %></div>
                    <% end %>
                    <div>Meus Funcion치rios</div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Painel 5 - Quantidade de Doses para cada Locker -->
          <% @lockers_associados.each do |keylocker| %>
            <div class="col-lg-3 col-md-6">
              <div class="panel panel-red">
                <div class="panel-heading">
                  <div class="row">
                    <div class="col-xs-3">
                      <i class="fa fa-flask fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                      <% if current_user.admin? %>
                        <div class="huge"><%= @admin_users_count %></div>
                      <% else %>
                        <div class="huge"><%= keylocker.contDose %></div>
                      <% end %>
                      <div>Quantidade de doses</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>

<% @lockers_associados.each do |keylocker| %>
  <p>
    Locker ID: <%= keylocker.id %>
    Owner: <%= keylocker.owner %>
    Status: <%= keylocker.status %>
    Quantidade de doses: <%= keylocker.contDose %>
  </p>
<% end %>



